<div class="accordion" id="publication-form">
  <div class="card">
    <div class="card-header" id="headingOne">
      <h2 class="mb-0">
        <button class="btn btn-link text-left" type="button" data-toggle="collapse" data-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
          Administrative Information
        </button>
      </h2>
    </div>

    <div id="collapseOne" class="collapse show" aria-labelledby="headingOne" data-parent="#publication-form">
      <div class="card-body">
        <div class="admin-terms form-group">
                <% f.object.administrative_terms.each do |term| %>
                <%= render_edit_field_partial(term, f: f) %>
                <% end %>
        </div>
      </div>
    </div>
  </div>
  <div class="card">
    <div class="card-header" id="headingTwo">
      <h2 class="mb-0">
        <button class="btn btn-link btn-block text-left collapsed" type="button" data-toggle="collapse" data-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
            Publication Information
        </button>
      </h2>
    </div>
    <div id="collapseTwo" class="collapse" aria-labelledby="headingTwo" data-parent="#publication-form">
      <div class="card-body">
            <div class="publication-terms">
                <% f.object.publication_information.each do |term| %>
                <%= render_edit_field_partial(term, f: f) %>
                <% end %>
            </div>
      </div>
    </div>
  </div>
</div>



<% if f.object.display_additional_fields? %>
    <%= link_to t('hyrax.works.form.additional_fields'),
                '#extended-terms',
                class: 'btn btn-secondary additional-fields',
                data: { toggle: 'collapse' },
                role: "button",
                'aria-expanded'=> "false",
                'aria-controls'=> "extended-terms" %>
    <div id="extended-terms" class='collapse'>
    <%= render 'form_media', f: f %>
    <% f.object.secondary_terms.each do |term| %>
        <%= render_edit_field_partial(term, f: f) %>
    <% end %>
    </div>
<% end %>